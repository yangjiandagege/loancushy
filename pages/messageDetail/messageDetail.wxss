/* pages/message/message.wxss */

.page-loading {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 14px;
  color: #666;
}

.weui-loading {
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}

.page-content {
  display: flex;
  flex-direction: column;
}

.view_iou_info {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  background: #fff;
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.view_iou_info view {
  display: flex;
  flex-direction: row;
}

.view_head {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #f1f1f1;
}

.view_content {
  padding-top: 20rpx;
}

.view_foot {
  margin-top: 20rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  border-top: 2rpx solid #f1f1f1;
}

.view_head text {
  color: #868686;
  font-size: 36rpx;
}

.view_content text {
  color: #868686;
  font-size: 30rpx;
}

.view_foot text {
  color: #868686;
  font-size: 36rpx;
}

#text_content {
  flex: 1;
  color: #333;
  text-align: end;
}

.view_qrcode {
  background: #fff;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.view_qrcode canvas {
  width: 340rpx;
  height: 340rpx;
  margin: 0 auto;
}
